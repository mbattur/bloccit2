<h2>Sign up Confirmation</h2>
 
<h3> Are you sure these values are correct?</h3> 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @user do |f| %>

       <% if @user.errors.any? %>
         <div class="alert alert-danger">
           <h4><%= pluralize(@user.errors.count, "error") %>.</h4>
           <ul>
             <% @user.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>
           </ul>
         </div>
       <% end %>


       <div class="form-group">
         <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>